<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/CourceBottomSheet"
    android:background="@color/dBlue"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C NAme"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/CourceName"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:textSize="15sp"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/CourceName"
        android:layout_margin="4dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:id="@+id/CourceImage"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:maxLines="3"
        android:id="@+id/CourceDescripton"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/CourceImage"
        android:layout_below="@+id/CourceName"
        android:padding="4dp"
        android:layout_margin="4dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Suted For"
        android:id="@+id/CourceSutedFor"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/CourceImage"
        android:layout_below="@+id/CourceDescripton"
        android:padding="4dp"
        android:layout_margin="4dp"/>

    <TextView
        android:id="@+id/CourcePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CourceSutedFor"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/CourceImage"
        android:padding="4dp"
        android:text="Price"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_below="@+id/CourceImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/white"
            android:id="@+id/EditCource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/dBlue"
            android:text="Edit Cource"
            android:layout_weight="1"/>
        <Button
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_margin="5dp"
            android:textColor="@color/dBlue"
            android:backgroundTint="@color/white"
            android:id="@+id/ViewDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:text="View Details" />
    </LinearLayout>


</RelativeLayout>